{
  "footer": {
    "blocks": [
      "footer-layout.desktop",
      "footer-layout.mobile"
    ],
    "props": {}
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop"
    ],
    "props": {
      "blackClass": "footerSection"
    }
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#info",
      "vtex.menu@2.x:menu#account",
      "vtex.menu@2.x:menu#footer-help",
      "vtex.menu@2.x:menu#socialnetwork"
    ],
    "props": {
      "blockClass": "menu-row",
      "marginTop": 5,
      "paddingTop": 7,
      "paddingBottom": 3,
      "colSizing": "auto",
      "verticalAlign": "center"
    }
  },
  "flex-layout.row#footer-2-desktop": {
    "children": [
      "flex-layout.col#payment",
      "flex-layout.col#secure",
      "flex-layout.col#poweredBy"
    ],
    "props": {
      "horizontalAlign": "center",
      "verticalAlign": "center",
      "preventHorizontalStretch": true,
      "preventVerticalStretch": true,
      "paddingTop": 6,
      "paddingBottom": 3,
      "colSizing": "auto",
      "colJustify": "around",
      "blockClass": "desktopFooter-2"
    }
  },
  "flex-layout.col#payment": {
    "children": [
      "rich-text#payment",
      "accepted-payment-methods"
    ],
    "props": {
      "horizontalAlign": "center",
      "verticalAlign": "top"
    }
  },
  "rich-text#payment": {
    "props": {
      "text": "**FORMAS DE PAGAMENTO**",
      "blockClass": "networkFooter"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": [
        "mastercard",
        "visa",
        "diners club"
      ],
      "showIColor": true
    }
  },
  "flex-layout.col#secure": {
    "children": [
      "rich-text#secure",
      "flex-layout.row#secure"
    ],
    "props": {
      "verticalAlign": "top"
    }
  },
  "rich-text#secure": {
    "props": {
      "text": "**TRANSAÇÃO SEGURA**"
    }
  },
  "flex-layout.row#secure": {
    "children": [
      "image#1",
      "image#2"
    ],
    "props": {
      "horizontalAlign": "center",
      "colSizing": "auto",
      "blockClass": "secureRowBadges"
    }
  },
  "image#1": {
    "props": {
      "src": "https://cdn-icons-png.flaticon.com/512/1256/1256202.png?w=826",
      "height": 35,
      "alt": "icone de escudo com sifrao"
    }
  },
  "image#2": {
    "props": {
      "src": "https://cdn-icons-png.flaticon.com/512/1224/1224138.png?w=826",
      "height": 35,
      "alt": "icone de cadeado cinza fechado"
    }
  },
  "flex-layout.row#footer-3-desktop": {
    "children": [
      "rich-text#footer"
    ],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "© 2022 LOJA DA MARIA TODOS OS DIREITOS RESERVADOS. Loja da Maria ME – CNPJ 00.000.000/0000-00. Uma Rua, n.º 0 – Um Bairro – CEP. 00000-000 – Uma Cidade/ESTADO\n[Política de Cookies](#) | [Política de Privacidade](#)",
      "blockClass": "footer"
    }
  },
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile",
      "flex-layout.row#3-footer-mobile"
    ]
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 8
    },
    "children": [
      "vtex.menu@2.x:menu#footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": [
      "flex-layout.col#paymentMobile",
      "flex-layout.row#mobileSecure",
      "flex-layout.col#poweredByMobile"
    ],
    "props": {
      "horizontalAlign": "between",
      "colSizing": "auto"
    }
  },
  "flex-layout.col#paymentMobile": {
    "children": [
      "accepted-payment-methods"
    ],
    "props": {
      "horizontalAlign": "center"
    }
  },
  "flex-layout.row#mobileSecure": {
    "children": [
      "image#1",
      "image#2"
    ],
    "props": {
      "preserveLayoutOnMobile": true,
      "preventHorizontalStretch": true,
      "horizontalAlign": "center"
    }
  },
  "flex-layout.col#poweredBy": {
    "children": [
      "rich-text#poweredBy",
      "powered-by"
    ],
    "props": {
      "preserveLayoutOnMobile": true,
      "preventHorizontalStretch": true,
      "horizontalAlign": "center",
      "verticalAlign": "top"
    }
  },
  "flex-layout.col#poweredByMobile": {
    "children": [
      "powered-by"
    ],
    "props": {
      "preserveLayoutOnMobile": true,
      "preventHorizontalStretch": true,
      "horizontalAlign": "center",
      "verticalAlign": "top"
    }
  },
  "rich-text#poweredBy": {
    "props": {
      "text": "**TECNOLOGIA**"
    }
  },
  "flex-layout.row#3-footer-mobile": {
    "children": [
      "rich-text#footer-mobile"
    ]
  },
  "rich-text#footer-mobile": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "© 2022 LOJA DA MARIA TODOS OS DIREITOS RESERVADOS. Loja da Maria ME – CNPJ 00.000.000/0000-00. Uma Rua, n.º 0 – Um Bairro – CEP. 00000-000 – Uma Cidade/ESTADO\n[Política de Cookies](#) | [Política de Privacidade](#)",
      "blockClass": "footer"
    }
  }
}